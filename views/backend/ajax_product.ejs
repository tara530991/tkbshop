<!DOCTYPE html>
<table id="product_list" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>產品圖片</th>
            <th>產品名稱</th>
            <th>產品單價</th>
            <th>產品數量</th>
            <th>產品描述</th>
            <th>產品編號</th>
            <th>產品分類</th>
            <th>排序</th>
            <th>產品上架時間</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        <input type="hidden" id="productId" name="productId">
        <% for(var i=0 ; i<data.length;i++) { %>
            <tr class="odd gradeX">
                <td>
                    <img class="pro-pic" src="/upload/<%=data[i].pic%>" alt="<%=data[i].product_name %>的圖片">
                </td>
                <td class="h-center">
                    <%=data[i].product_name %>
                </td>
                <td class="h-center">
                    <%=data[i].price %>
                </td>
                <td class="h-center">
                    <%=data[i].stock %>
                </td>
                <td class="h-center">
                    <%=data[i].description %>
                </td>
                <td class="h-center">
                    <%=data[i].ident %>
                </td>
                <td class="h-center">
                    <%=data[i].category %>
                </td>
                <td class="h-center">
                    <%=data[i].sort %>
                </td>
                <td class="h-center">
                    <%=moment(data[i].addtime).format('YYYY-MM-DD') %>
                </td>
                <td>
                    <input type="button" id="delete" onclick="deleteAction(<%=data[i].product_id %>)" value="刪除">
                </td>
            </tr>
            <%} %>
    </tbody>
</table>