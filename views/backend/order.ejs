                    <div id="panBody">
                    <div id="product_list"class="panel-body">
                        <table  width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="text-center">訂單編號</th>
                                    <th class="text-center">訂單成立時間</th>
                                    <th class="text-center">收件人</th>
                                    <th class="text-center">收件地址</th>
                                    <th class="text-center">總金額</th>
                                    <th class="text-center">訂單狀態</th>
                                </tr>
                            </thead>
                            <tbody>
                                <input type="hidden" id="productId" name="productId">
                                <% for(var i=0 ; i<data.length;i++) { %>
                                    <tr class="odd gradeX">
                                        <td scope="row" class="text-center">
                                            <%=data[i].order_id %>
                                                <input type="hidden" name="orderId" value="<%=data[i].order_id %>">
                                        </td>
                                        <td class="text-center">
                                            <%=moment(data[i].addtime).format('YYYY-MM-DD') %>
                                        </td>
                                        <td class="text-center">
                                            <%=data[i].buyer %>
                                        </td>
                                        <td>
                                            <%=data[i].address %>
                                        </td>
                                        <td class="text-center">
                                            <%=data[i].total%>
                                        </td>
                                        <td class="text-center">
                                            <%=statusArray[i] %>
                                        </td>
                                    </tr>
                                    <%} %>
                            </tbody>
                        </table>
                    </div>
                </div>
                </div>
            </div>
        </div>
