<!DOCTYPE html>
<html lang="en">
<head>
    <title>最新消息</title>
</head>
<% include header %>
<body>
    <div id="wrapper">
        <div id="page">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">最新消息列表</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row wrap1280">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>日期</th>
                                        <th>標題</th>
                                        <th>圖片</th>
                                        <th>內容</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0 ; i < data.length;i++) { %>
                                        <tr class="odd gradeX">
                                            <td>
                                                <%=moment(data[i].date).format('YYYY-MM-DD')%>
                                            </td>
                                            <td>
                                                <%=data[i].title %>
                                            </td>
                                            <td>
                                                <img src="" alt="">
                                                <%=data[i].pic %>
                                            </td>
                                            <td>
                                                <%=data[i].content %>
                                            </td>
                                        </tr>
                                        <%} %>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
</body>
</html>