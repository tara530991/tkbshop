<!DOCTYPE html>
<table id="product_list" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>圖片</th>
            <th>品名</th>
            <th>產品說明</th>
            <th>售價</th>
            <th>存貨狀況</th>
            <th>放入購物車</th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0 ; i < data.length;i++) { %>
            <tr class="odd gradeX">
                <td>
                    <img id="img" src="" alt="" />
                    <%=data[i].pic %>
                </td>
                <td>
                    <%=data[i].product_name %>
                </td>
                <td>
                    <%=data[i].description %>
                </td>
                <td class="price">
                    <%=data[i].price %>
                </td>
                <td>
                    <%=data[i].stock %>
                </td>
                <td>
                    <button id="buy" onclick="addToCart(<%=data[i].id %>)">加入購物車</button>
                </td>
            </tr>
            <% } %>
    </tbody>
</table>

