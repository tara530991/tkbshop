<!DOCTYPE html>
<html lang="en">
<head>
    <title>訂單查詢結果</title>
</head>
<% include header %>
<body>
    <div id="wrapper">
        <div id="page">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">訂單查詢</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <form id="mainForm" action="/member/login1" method="POST">
            <!-- /.row -->
            <% if(loginStatus == false) {%>
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">請先登入會員</h3>
                        </div>
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="帳號（E-mail）" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="密碼" name="password" type="password" value="">
                                </div>
                                <input id="login" onclick="loginAction()" type="submit" value="登入" class="btn btn-lg btn-success btn-block">
                                <div>
                                    <%- message %>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <% }else if(loginStatus == true) { %>
            <div class="row wrap1280">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            訂單資訊
                        </div>
                        <!-- /.panel-heading -->
                            <div id="panBody1" class="panel-body">
                                <table id="order_list1" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>訂單編號</th>
                                            <th>下單時間</th>
                                            <th>收件人</th>
                                            <th>收件地址</th>
                                            <th>總金額</th>
                                            <th>訂單狀態</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=0 ; i < data.length;i++) { %>
                                            <tr class="odd gradeX">
                                                <td id="orderId">
                                                    <%=data[i].order_id %>
                                                </td>
                                                <td>
                                                    <%=moment(data[i].addtime).format('YYYY-MM-DD') %>
                                                </td>
                                                <td>
                                                    <%=data[i].buyer %>
                                                </td>
                                                <td>
                                                    <%=data[i].address %>
                                                </td>
                                                <td>
                                                    <%=data[i].total%>
                                                </td>
                                                <td>
                                                    <%=status %>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->				                    
                    </form>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

            <div class="row wrap1280">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            商品明細
                        </div>
                        <!-- /.panel-heading -->
                        <div id="panBody1" class="panel-body">
                            <table id="order_list1" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>圖片</th>
                                        <th>商品名稱</th>
                                        <th>售價</th>
                                        <th>購買數量</th>
                                        <th>小計金額</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0 ; i < data2.length;i++) { %>
                                        <tr class="odd gradeX">
                                            <td>
                                                <img src="<%=data2[i].pic %>" alt="">
                                            </td>
                                            <td>
                                                <%=data2[i].product_name %>
                                            </td>
                                            <td>
                                                <%=data2[i].price %>
                                            </td>
                                            <td>
                                                <%=data2[i].amount %>
                                            </td>
                                            <td>
                                                <%=data2[i].subtotal %>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </form>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <% } %>
        <script>
            $(function () {
                var orderId = $('#orderId').text().replace(/  /g,"");
            })

            function loginAction() {
                $('#mainform').attr('action', '/login1');
            }
        </script>
</body>
</html>