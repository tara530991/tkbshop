<!DOCTYPE html>
<head>
    <style>
        .container{padding:0 ;}
        .myLogin{margin-top:5em;max-width: 360px;}
        .myLogin .form-control{max-width: 330px;width: 100%;}
        .myLogin input[type=submit].btn-block{max-width: 330px;}
    </style>
</head>
<body>
<form role="form" action="/member/login1" method="POST">    
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="myLogin login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">請先登入會員</h3>
                </div>
                <div class="panel-body">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="帳號（E-mail）" name="email" type="email" autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="密碼" name="password" type="password" value="">
                        </div>
                        <input type="submit" onclick="loginAction()" value="登入" class="btn btn-lg btn-success btn-block">
                        <div>
                            <%- message %>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
    <script>
        function loginAction() {
            $('#mainform').attr('action', '/member/login1');
            $('#mainform').attr('method', 'POST');
        }
    </script>
</body>

