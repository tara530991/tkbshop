<!DOCTYPE html>
<html lang="en">
<head>
	<title>訂單查詢</title>
</head>
<% include header %>
<body>
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">訂單查詢</h1>
			</div>
			<form id="mainform" role="form" action="/product/order" method="POST">
			<% if　(loginStatus == false) { %>
				<div class="col-md-4 col-md-offset-4">
					<div class="login-panel panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">請先登入會員</h3>
						</div>
						<div class="panel-body">
							<fieldset>
								<div class="form-group">
									<input class="form-control" placeholder="帳號（E-mail）" name="email" type="email" autofocus>
								</div>
								<div class="form-group">
									<input class="form-control" placeholder="密碼" name="password" type="password">
								</div>
								<input onclick="loginAction()" type="submit" value="登入" class="btn btn-lg btn-success btn-block">
								<div>
									<%- message %>
								</div>
							</fieldset>
						</div>
					</div>
				</div>
			<% }else if(loginStatus == true) { %>
			<div class="col-md-4 col-md-offset-4">
				<div class="login-panel panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">訂單查詢</h3>
					</div>
					<div class="panel-body">
						<fieldset>
							<div class="form-group">
								<input class="form-control" placeholder="訂單編號" name="orderId" type="text" value="">
							</div>
							<input type="submit" value="查詢" class="btn btn-lg btn-success btn-block">
						</fieldset>
					</div>
				</div> 
			</div>
			<% } %>					
			</form>
		</div>
	</div>
	<script>
	$(function(){

	})
	function loginAction(){
		$('#mainform').attr('action','/member/login1');
	}
	</script>
</body>
</html>