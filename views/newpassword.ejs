<!DOCTYPE html>
<html>
<head>
	<title>修改密碼</title>
	<style>
		.newpass .form-control{max-width: 330px;width: 100%;}
	</style>
</head>
<% include header %>
<body>
<form action="/member/newpass1" method="POST">
	<div class="container">
		<div class="row">
			<div class="container">
				<ol class="breadcrumb">
					<li><a href="/">首頁</a></li>
					<li><a href="/member">會員中心</a></li>
					<li class="active">修改密碼</li>
				</ol>
			</div>
			<div class="col-lg-12">
				<h2 class="top">修改密碼</h2>
			</div>
			<% if(loginStatus == false){ %>
				<% include loginlayout %>
			<% } else if(loginStatus == true){ %>
			<div class="col-md-4 col-md-offset-4">
				<div class="login-panel panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">修改密碼</h3>
					</div>
					<div class="panel-body">
						<fieldset class="newpass">
							<div class="form-group">
								<input class="form-control" placeholder="舊密碼" name="oldpass" type="password" autofocus>
							</div>
							<div class="form-group">
								<input class="form-control" placeholder="新密碼" name="newpass" type="password" value="">
							</div>
							<div class="form-group">
								<input class="form-control" placeholder="確認新密碼" name="newpass2" type="password" value="">
							</div>
							<input type="submit" value="修改密碼" class="btn btn-primary">
							<div><%- message %></div>
						</fieldset>
					</div>
				</div>
			</div>
			<% }%>
		</div>
	</div>			
</form>
<script>
	$(function () {
		$('.memenu li').eq(5).addClass('active');
	})
</script>
</body>
</html>