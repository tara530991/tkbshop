<script>
    $(function () {        
        var request = new XMLHttpRequest();     
    });

    function addToCart(productId){
        $("#product").val(productId);
        // alert($("#product").val());
    }

    function sortSearch() {
        $.ajax({
            url: '/product/ajaxProduct',
            method: 'GET',
            dataType: 'text',
            data: {
                sort: $('#sort').val(),
                search: $('#search').val(),
            },
            success: function (data) {
                $('#product_list').remove();
                $('#panBody').append(data);
            },
            error: function (err) {
                console.log(err);
            }
        })
    }

