<!DOCTYPE html>
<html>
<head>
    <title>產品介紹</title>
</head>
<% include header %>
<body>
<div id="wrapper">
    <div id="page">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">產品項目</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row wrap1280">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <form id="mainForm" action="/product/addToCart" method="POST">
                        <input type="hidden" id="product" name="productId" />
                        <div id="panBody" class="panel-body">
                            <table id="product_list" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <div>
                                    <span>排序方式</span>
                                    <select name="sort" id="sort" onchange="sortSearch()">
                                        <option value="">請選擇條件</option>
                                        <option value="1">售價(由低至高)</option>
                                        <option value="2">售價(由高至低)</option>
                                    </select>
                                </div>
                                <div>
                                    <input type="text" name="search" id="search">
                                    <input type="button" value="查詢" onclick="sortSearch()">
                                </div>
                                <thead>
                                    <tr>
                                        <th>圖片</th>
                                        <th>品名</th>
                                        <th>產品說明</th>
                                        <th>售價</th>
                                        <th>存貨狀況</th>
                                        <th>放入購物車</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0 ; i < data.length;i++) { %>
                                        <tr class="odd gradeX">
                                            <td>
                                                <img src="<%=data[i].pic %>" alt="" />
                                            </td>
                                            <td>
                                                <%=data[i].product_name %>
                                            </td>
                                            <td>
                                                <%=data[i].description %>
                                            </td>
                                            <td class="price">
                                                <%=data[i].price %>
                                            </td>
                                            <td>
                                                <%=data[i].stock %>
                                            </td>
                                            <td>
                                                <button id="buy" onclick="addToCart(<%=data[i].product_id %>)">加入購物車</button>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
        
                        </div>
                    </form>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
<script>
    $(function () {        
        var request = new XMLHttpRequest();     
    });

    function addToCart(productId){
        $("#product").val(productId);
        console.log($("#product").val(productId));
    }

    function sortSearch() {
        $.ajax({
            url: '/product/ajaxProduct',
            method: 'GET',
            dataType: 'text',
            data: {
                sort: $('#sort').val(),
                search: $('#search').val(),
            },
            success: function (data) {
                $('#product_list').remove();
                $('#panBody').append(data);
            },
            error: function (err) {
                console.log(err);
            }
        })
    }

</script>
</body>
</html>