<!DOCTYPE html>
<html>
<head>
    <title>會員中心</title>
    <style>
        #member {margin: 0 250px;}
        #member section {margin:0 2rem;}
    </style>
</head>
<% include header %>
<body>
    <% if　(loginStatus == false) { %>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">會員登入</h3>
                        </div>
                        <div class="panel-body">
                            <fieldset>
                                
                                <form role="form" action="/member/login1" method="POST">
                                    <div class="form-group">
                                        <input class="form-control" placeholder="帳號（E-mail）" name="email" type="email" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="密碼" name="password" type="password" value="">
                                    </div>
                                    <!-- <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                        </label>
                                    </div> -->
                                    <input type="submit" value="登入" class="btn btn-lg btn-success btn-block">
                                    <div><%- message %></div>
                                </form>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else if (loginStatus == true) {%>
    <div id="member">
        <section>
            <ul>
                <li><a href="/member/edit">編輯基本資料</a></li>
                <li><a href="/member/newpass">修改密碼</a></li>
                <li><a href="">編輯收件人地址</a></li>
                <li><a href="">訂單查詢</a></li>
            </ul>
        </section>
        <section>
            <% for(var i=0 ; i < data.length;i++) { %>
            <span id="name">中文全名：<%= data[i].username %></span><br>
            <span id="email">E-mail：<%= data[i].email %></span><br>
            <span id="tel">室內電話：<%= data[i].tel %></span><br>
            <span id="birth">生日：<%= moment(data[i].birth).format('YYYY-MM-DD') %></span><br>
            <span id="address">地址：<%= data[i].address %></span>
            <% } %>  
        </section>
        <% } %>
    </div>
</body>
</html>
