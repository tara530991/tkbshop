<!DOCTYPE html>
<html lang="en">
<head>
    <title>訂單列表</title>
</head>
<% include header %>
<body>
    <div id="wrapper">
        <div id="page">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">訂單列表</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <form id="mainForm" action="/product/order" method="POST">
                <input type="hidden" name="orderId" id="order" />
            <!-- /.row -->
                <% if(loginStatus == false) {%>
                    <% include loginlayout %>
                <% }else if(loginStatus == true) { %>
                <div class="row wrap1280">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                訂單資訊
                            </div>
                            <!-- /.panel-heading -->
                                <div id="panBody1" class="panel-body">
                                    <table id="order_list1" width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>訂單編號</th>
                                                <th>下單時間</th>
                                                <th>收件人</th>
                                                <th>收件地址</th>
                                                <th>總金額</th>
                                                <th>訂單狀態</th>
                                                <th>查看更多</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0 ; i < data.length;i++) { %>
                                                <tr class="odd gradeX">
                                                    <td>
                                                        <%=data[i].order_id %>
                                                    </td>
                                                    <td>
                                                        <%=moment(data[i].addtime).format('YYYY-MM-DD') %>
                                                    </td>
                                                    <td>
                                                        <%=data[i].buyer %>
                                                    </td>
                                                    <td>
                                                        <%=data[i].address %>
                                                    </td>
                                                    <td>
                                                        <%=data[i].total%>
                                                    </td>
                                                    <td>
                                                        <%=statusArray[i] %>
                                                    </td>
                                                    <td>
                                                        <input type="submit" onclick="addOrder('<%=data[i].order_id %>')" value="查看更多">
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                    <!-- /.table-responsive -->
                                </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
                <% } %>				                    
            </form>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

        <script>
            $(function () {

            })
            function addOrder(orderId){
                $("#order").val(orderId);
                // alert($("#order").val());
            }
        </script>
</body>
</html>